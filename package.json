{
  "name": "signage-application",
  "version": "0.0.1",
  "description": "Signage app for OakOS v5.0.x",
  "main": "src/server.js",
  "scripts": {
    "start": "node_modules/.bin/oak .",
    "dev": "env $(cat .env | grep -v '#' | xargs) npm start",
    "rebuild": "rm -rf node_modules/ package-lock.json && npm i && node_modules/.bin/oak-rebuild $(pwd)",
    "gulp": "node_modules/.bin/gulp",
    "hosting": "firebase serve",
    "test": "exit 0;"
  },
  "engines": {
    "node": "10.14.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/OakLabsInc/app-signage.git"
  },
  "author": "Richard Joffray <richard@joffray.com>",
  "license": "Apache 2",
  "bugs": {
    "url": "https://github.com/OakLabsInc/app-signage/issues"
  },
  "homepage": "https://github.com/OakLabsInc/app-signage#readme",
  "devDependencies": {
    "oak": "~5.0.0",
    "standard": "^11.0.1"
  },
  "dependencies": {
    "@oaklabs/platform": "~2.0.1",
    "angular": "~1.7.2",
    "angular-animate": "~1.7.2",
    "angular-aria": "~1.7.5",
    "angular-material": "~1.1.10",
    "angular-messages": "~1.7.5",
    "express": "~4.16.3",
    "lodash": "^4.17.4",
    "oak-tools": "~0.5.7",
    "quick-grpc": "~1.1.0",
    "gulp": "~3.9.1",
    "gulp-pug": "~3.3.0",
    "gulp-stylus": "~2.6.0",
    "gulp-watch": "~4.3.11",
    "nib": "~1.1.2",
    "pug-cli": "~1.0.0-alpha6",
    "stylus": "~0.54.5"
  },
  "standard": {
    "globals": [
      "$",
      "jQuery"
    ],
    "ignore": [
      "node_modules/**",
      "src/admin/public/**"
    ]
  },
  "private": true
}
