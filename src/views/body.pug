body(ng-controller='appController' ,  ng-click="tapped($event)", ng-mousemove="mouseMoved($event)", ng-cloak)
  ripples
    .ripple(ng-repeat="r in ripples" ng-style="{ top: r.y + 'px', left: r.x + 'px' }")
  .swiper-container(ng-style="{'background-color': gallery.backgroundColor}")
    .swiper-wrapper
      .swiper-slide(ng-style="{'background-color': slide.backgroundColor}" ng-repeat="slide in gallery.slides track by $index" data-swiper-autoplay="{{slide.delay!=null?slide.delay:gallery.autoplay.delay}}" style="background: url({{slide.image}})")  
        .overlay-container(class="{{slide.overlayPosition}}")
          .text-wrapper(ng-style="{'color':slide.textColor,'background-color': slide.textBackgroundColor}")
            h2.overlay-title {{slide.title}}
            div.overlay-text {{slide.overlay}}    
    .swiper-pagination(ng-class="{ 'swiper-pagination-hidden': !gallery.config.showNavigation }")
    .swiper-button-prev(ng-class="{ 'swiper-button-disabled': !gallery.config.showNavigation }")
    .swiper-button-next(ng-class="{ 'swiper-button-disabled': !gallery.config.showNavigation }")