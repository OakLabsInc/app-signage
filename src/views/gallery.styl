.swiper-wrapper
  position absolute
  left 0
  top 0
.swiper-container
  position absolute
  top 0
  left 0
  overflow hidden
  height 100%
  width 100%
  .swiper-slide 
    font-size 2em
    align-items center
    background-repeat no-repeat!important
    background-size cover!important
    background-position center center!important
    position relative
    display flex
    justify-content center
    align-items center
    overflow hidden
    .overlay-container
      padding 1.618em
      width 100%
      height 100%
      display flex
      &.left-top
        justify-content flex-start
        align-items flex-start
        text-align left
      &.left-center
        justify-content flex-start
        align-items center
        text-align left
      &.left-bottom
        justify-content flex-start
        align-items flex-end
        text-align left
      &.center-top
        justify-content center
        align-items flex-start
        text-align center
      &.center-center
        justify-content center
        align-items center
        text-align center
      &.center-bottom
        justify-content center
        align-items flex-end
        text-align center
      &.right-top
        justify-content flex-end
        align-items flex-start
        text-align right
      &.right-center
        justify-content flex-end
        align-items center
        text-align right
      &.right-bottom
        justify-content flex-end
        align-items flex-end
        text-align right
      .text-wrapper
        height 50%
        width 50%
        overflow hidden
        padding 15px

