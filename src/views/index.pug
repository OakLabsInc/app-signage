  body(ng-controller='appController' ,  ng-click="tapped($event)", ng-mousemove="mouseMoved($event)", ng-cloak)
    ripples
      .ripple(ng-repeat="r in ripples" ng-style="{ top: r.y + 'px', left: r.x + 'px' }")
    //- .swiper-container
    //-   .swiper-wrapper
    //-     .swiper-slide(ng-repeat="slide in gallery.slides track by $index" style="background: url({{slide.image}})")
    .swiper-container
      .swiper-wrapper
        .swiper-slide(ng-style="{'background-color': slide.backgroundColor}" ng-repeat="slide in gallery.slides track by $index" data-swiper-autoplay="{{slide.delay!=null?slide.delay:gallery.autoplay.delay}}" style="background: url({{slide.image}})")  
          .overlay-container(class="{{slide.overlayPosition}}")
            .text-wrapper(ng-style="{'color':slide.textColor,'background-color': slide.textBackgroundColor}")
              h2.overlay-title {{slide.title}}
              div.overlay-text {{slide.overlay}}    
      .swiper-pagination(ng-if="gallery.slides.length > 1 && selectedGallery.config.showNavigation")
      .swiper-button-prev(ng-if="gallery.slides.length > 1 && selectedGallery.config.showNavigation")
      .swiper-button-next(ng-if="gallery.slides.length > 1 && selectedGallery.config.showNavigation")
          

    script(src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.7.5/angular.min.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/Swiper/4.4.6/js/swiper.min.js")
    script(src='/index.js')

      
