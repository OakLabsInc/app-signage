
*
  box-sizing border-box
  -webkit-font-smoothing subpixel-antialiased
  -webkit-user-select none !important
  -webkit-user-drag none !important
  -webkit-backface-visibility hidden
  transform translate3d(0,0,0)
p
  margin 0
a
  text-decoration none
  color inherit

style 
  display none
script
  display none

html,body
  height 100%
  width 100%
  margin 0
  padding 0
  position relative
  font-size 1em
body
  display flex
  align-items center
  justify-content center
  background-color #000
  color #ffffff

@import "gallery.styl"

ripples
  position absolute
  height 100%
  width 100%
  top 0
  left 0
  pointer-events none
  z-index 999

makeRipple(size = 1em, duration = .7s, count = infinite, thickness = 2px, delay = 0s)
  position absolute
  width size
  height size
  margin-top size * -.5
  margin-left size * -.5
  border thickness solid rgba(#222, .7)
  border-radius 50%
  opacity 0
  animation-name rippleOut
  animation-duration duration
  animation-timing-function ease-out
  animation-iteration-count count
  animation-delay delay
  animation-fill-mode forwards

.ripple
  makeRipple(count: 1)

@keyframes rippleOut
  0%
    transform rotate(45deg) scale(.2)
    opacity 0
  50%
    opacity 1
  100% 
    transform rotate(45deg) scale(2.2)
    opacity 0
