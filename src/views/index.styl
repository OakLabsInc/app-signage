
@font-face
  font-family 'TradeGothic'
  src:  url(/fonts/TradeGothCond18.ttf) format('truetype')
style 
  display none
script
  display none
html,body
  height 100%
  width 100%
  margin 0
  padding 0
  font-family TradeGothic
html
  font-size 1em
body
  display flex
  align-items center
  justify-content center
  background-color #000
  color #424242

.swiper-container
  width: 100%;
  height: 100%;

.swiper-slide 
  text-align: center;
  font-size: 18px;
  background: #000;
  /* Center slide text vertically */
  display: -webkit-box;
  display: -ms-flexbox;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -ms-flex-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
  -webkit-box-align: center;
  -ms-flex-align: center;
  -webkit-align-items: center;
  align-items: center;
  background-repeat: no-repeat!important
  background-size: normal!important
  background-position center center!important

.hidden
  position absolute
  left -10000px
  top -10000px

ripples
  position absolute
  height 100%
  width 100%
  top 0
  left 0
  pointer-events none
  z-index 999

makeRipple(size = 1em, duration = .7s, count = infinite, thickness = 2px, delay = 0s)
  position absolute
  width size
  height size
  margin-top size * -.5
  margin-left size * -.5
  border thickness solid rgba(#222, .7)
  border-radius 50%
  opacity 0
  animation-name rippleOut
  animation-duration duration
  animation-timing-function ease-out
  animation-iteration-count count
  animation-delay delay
  animation-fill-mode forwards

.ripple
  makeRipple(count: 1)

@keyframes rippleOut
  0%
    transform rotate(45deg) scale(.2)
    opacity: 0
  50%
    opacity 1
  100% 
    transform rotate(45deg) scale(2.2)
    opacity 0
