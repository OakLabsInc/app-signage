
@font-face
  font-family 'TradeGothic'
  src:  url(/fonts/TradeGothCond18.ttf) format('truetype')
style 
  display none
script
  display none
html,body
  height 100%
  width 100%
  margin 0
  padding 0
  font-family TradeGothic
html
  font-size 1em
body
  display flex
  align-items center
  justify-content center
  background-color #000
  color #424242

.swiper-container
  color: #ffffff !important
  position absolute
  top 0
  right 0
  left 0
  bottom 0
  .swiper-slide 
    font-size 20px;
    background #000
    align-items center
    background-repeat no-repeat!important
    background-size cover!important
    background-position center center!important
    position relative
    display flex
    justify-content: center
    align-items: center
    .overlay-container
      width 85%
      height 85%
      display flex
      
      &.left-top
        justify-content: flex-start
        align-items: flex-start
        text-align left
      &.left-center
        justify-content: flex-start
        align-items: center
        text-align left
      &.left-bottom
        justify-content: flex-start
        align-items: flex-end
        text-align left
      &.center-top
        justify-content: center
        align-items: flex-start
        text-align center
      &.center-center
        justify-content: center
        align-items: center
        text-align center
      &.center-bottom
        justify-content: center
        align-items: flex-end
        text-align center
      &.right-top
        justify-content: flex-end
        align-items: flex-start
        text-align right
      &.right-center
        justify-content: flex-end
        align-items: center
        text-align right
      &.right-bottom
        justify-content: flex-end
        align-items: flex-end
        text-align right
      .text-wrapper
        height 50%
        width 50%
        overflow hidden
        padding: 15px

.swiper-button-prev 
  background-image: url("data:image/svg+xml;charset=utf-8,%3Csvg%20xmlns%3D'http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg'%20viewBox%3D'0%200%2027%2044'%3E%3Cpath%20d%3D'M0%2C22L22%2C0l2.1%2C2.1L4.2%2C22l19.9%2C19.9L22%2C44L0%2C22L0%2C22L0%2C22z'%20fill%3D'%23dedede'%2F%3E%3C%2Fsvg%3E") !important;
.swiper-pagination-bullet-active
  background #dedede!important
.swiper-button-next 
  background-image: url("data:image/svg+xml;charset=utf-8,%3Csvg%20xmlns%3D'http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg'%20viewBox%3D'0%200%2027%2044'%3E%3Cpath%20d%3D'M27%2C22L27%2C22L5%2C44l-2.1-2.1L22.8%2C22L2.9%2C2.1L5%2C0L27%2C22L27%2C22z'%20fill%3D'%23dedede'%2F%3E%3C%2Fsvg%3E") !important;

.hidden
  position absolute
  left -10000px
  top -10000px

ripples
  position absolute
  height 100%
  width 100%
  top 0
  left 0
  pointer-events none
  z-index 999

makeRipple(size = 1em, duration = .7s, count = infinite, thickness = 2px, delay = 0s)
  position absolute
  width size
  height size
  margin-top size * -.5
  margin-left size * -.5
  border thickness solid rgba(#222, .7)
  border-radius 50%
  opacity 0
  animation-name rippleOut
  animation-duration duration
  animation-timing-function ease-out
  animation-iteration-count count
  animation-delay delay
  animation-fill-mode forwards

.ripple
  makeRipple(count: 1)

@keyframes rippleOut
  0%
    transform rotate(45deg) scale(.2)
    opacity: 0
  50%
    opacity 1
  100% 
    transform rotate(45deg) scale(2.2)
    opacity 0
